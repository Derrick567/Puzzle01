<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp">

    <com.example.user.puzzle01.com.example.user.view.GamePuzzleLayout
        android:id="@+id/game_puzzle_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></com.example.user.puzzle01.com.example.user.view.GamePuzzleLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/game_puzzle_layout"
        android:layout_margin="3dp">

        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#EA7821"
            android:gravity="center"
            android:padding="4dp"
            android:text="1"
            android:background="@drawable/textbg" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_alignParentRight="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#EA7821"
            android:gravity="center"
            android:padding="4dp"
            android:text="120"
            android:background="@drawable/textbg" />
    </RelativeLayout>

</RelativeLayout>
